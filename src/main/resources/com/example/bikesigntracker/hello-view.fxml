<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.bikesigntracker.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <TableView fx:id="cycleSignTable" >
        <columns>
            <TableColumn fx:id="typeColumn"  />
            <TableColumn fx:id="nameColumn"  />
            <TableColumn fx:id="amountColumn"  />
            <TableColumn fx:id="isPrintedColumn"  />
        </columns>
    </TableView>
    <Button text="Save" onAction="#onSaveButtonClick"/>
    <Button text="Add sign" onAction="#onAddButtonClick"/>
</VBox>
